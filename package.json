{
	"name": "@sprucelabs/semantic-release",
	"publishConfig": {
		"access": "public"
	},
	"version": "3.0.5",
	"description": "Sprucelabs standards for semantic releases",
	"main": "build/index.js",
	"scripts": {
		"build": "npm run clean && tsc",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint:fix": "eslint --fix '**/*.ts'",
		"watch": "chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'npm run build'",
		"release": "semantic-release"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/sprucelabsai/sprucelabs-semantic-release.git"
	},
	"author": "Sprucelabs",
	"contributors": [
		{
			"name": "Ken Goldfarb",
			"email": "ken@sprucelabs.ai"
		},
		{
			"name": "Ryan Johnson",
			"email": "ryan@sprucelabs.ai"
		}
	],
	"engines": {
		"node": ">=8"
	},
	"bugs": {
		"url": "https://github.com/sprucelabsai/sprucelabs-semantic-release/issues"
	},
	"dependencies": {
		"@semantic-release/changelog": "^5.0.0",
		"@semantic-release/git": "^9.0.0",
		"conventional-changelog-sprucelabs": "^1.1.0",
		"semantic-release": "^17.0.4"
	},
	"devDependencies": {
		"chokidar-cli": "^2.1.0",
		"eslint": "^5",
		"eslint-config-spruce": "^10.0.0",
		"prettier": "^1.14.2",
		"ts-node": "^8.8.1",
		"typescript": "^3.8"
	},
	"peerDependencies": {}
}
